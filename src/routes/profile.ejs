<div class="max-w-4xl mx-auto">
    <!-- Profile Header -->
    <div class="bg-white shadow rounded-lg p-6 mb-6">
        <div class="flex items-center space-x-4">
            <div class="bg-blue-500 text-white rounded-full w-16 h-16 flex items-center justify-center text-2xl font-bold">
                <%= user.username.charAt(0).toUpperCase() %>
            </div>
            <div>
                <h1 class="text-2xl font-bold text-gray-900">My Profile</h1>
                <p class="text-gray-500"><%= user.email %></p>
            </div>
        </div>
    </div>

    <!-- Messages -->
    <% if (typeof message !== 'undefined' && message) { %>
        <div class="bg-green-50 border-l-4 border-green-500 p-4 mb-6">
            <div class="flex">
                <div class="flex-shrink-0">
                    <i class="fas fa-check-circle text-green-500"></i>
                </div>
                <div class="ml-3">
                    <p class="text-sm text-green-700"><%= message %></p>
                </div>
            </div>
        </div>
    <% } %>

    <% if (typeof error !== 'undefined' && error) { %>
        <div class="bg-red-50 border-l-4 border-red-500 p-4 mb-6">
            <div class="flex">
                <div class="flex-shrink-0">
                    <i class="fas fa-exclamation-circle text-red-500"></i>
                </div>
                <div class="ml-3">
                    <p class="text-sm text-red-700"><%= error %></p>
                </div>
            </div>
        </div>
    <% } %>

    <!-- Profile Information -->
    <div class="bg-white shadow rounded-lg p-6 mb-6">
        <h2 class="text-xl font-semibold mb-6">Profile Information</h2>
        
        <form action="/profile/update" method="POST" class="space-y-6">
            <div>
                <label for="username" class="block text-sm font-medium text-gray-700">Username</label>
                <div class="mt-1 relative rounded-md shadow-sm">
                    <input type="text" name="username" id="username"
                        class="block w-full rounded-md border-gray-300 focus:border-blue-500 focus:ring-blue-500 sm:text-sm"
                        value="<%= user.username %>"
                        minlength="3"
                        pattern="[A-Za-z0-9_-]+"
                        title="Username can only contain letters, numbers, underscores, and hyphens"
                        required>
                </div>
                <p class="mt-1 text-sm text-gray-500">
                    This username will be used in your page URLs. Choose carefully!
                </p>
            </div>

            <div>
                <label class="block text-sm font-medium text-gray-700">Email</label>
                <div class="mt-1 block w-full rounded-md border border-gray-300 bg-gray-50 px-3 py-2 text-gray-500 sm:text-sm">
                    <%= user.email %>
                </div>
                <p class="mt-1 text-sm text-gray-500">
                    Email is managed through your Google account
                </p>
            </div>

            <div class="flex items-center justify-between pt-4 border-t">
                <div>
                    <h3 class="text-sm font-medium text-gray-700">Account Statistics</h3>
                    <p class="mt-1 text-sm text-gray-500">
                        Pages Created: <%= pageCount %>
                    </p>
                    <p class="mt-1 text-sm text-gray-500">
                        Member Since: <%= new Date(user.createdAt).toLocaleDateString() %>
                    </p>
                </div>
                <button type="submit"
                    class="inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500">
                    Update Profile
                </button>
            </div>
        </form>
    </div>

    <!-- Account Management -->
    <div class="bg-white shadow rounded-lg p-6">
        <h2 class="text-xl font-semibold mb-6">Account Management</h2>
        
        <div class="space-y-4">
            <div class="flex items-center justify-between py-4 border-t">
                <div>
                    <h3 class="text-sm font-medium text-gray-700">Public Profile URL</h3>
                    <p class="mt-1 text-sm text-gray-500">
                        <a href="/user/<%= user.username %>" class="text-blue-500 hover:text-blue-600">
                            /user/<%= user.username %>
                        </a>
                    </p>
                </div>
                <a href="/user/<%= user.username %>"
                    class="inline-flex items-center px-3 py-2 border border-gray-300 shadow-sm text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50">
                    View Public Profile
                </a>
            </div>

            <div class="flex items-center justify-between py-4 border-t">
                <div>
                    <h3 class="text-sm font-medium text-gray-700">Google Account</h3>
                    <p class="mt-1 text-sm text-gray-500">
                        Connected to <%= user.email %>
                    </p>
                </div>
                <a href="/auth/logout"
                    class="inline-flex items-center px-3 py-2 border border-red-300 shadow-sm text-sm font-medium rounded-md text-red-700 bg-white hover:bg-red-50">
                    Sign Out
                </a>
            </div>
        </div>
    </div>
</div>