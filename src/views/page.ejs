<div class="max-w-4xl mx-auto">
    <div class="bg-white shadow rounded-lg p-6">
        <div class="mb-6">
            <h1 class="text-3xl font-bold mb-2"><%= page.title %></h1>
            <p class="text-gray-500">Created by <%= user.username %> on <%= new Date(page.createdAt).toLocaleDateString() %></p>
            <p class="text-sm text-gray-400">URL: /<%= user.username %>/<%= page.urlId %></p>
        </div>
        
        <div class="prose max-w-none">
            <%= page.content %>
        </div>
        
        <% if (typeof currentUser !== 'undefined' && currentUser && currentUser.id === user.id) { %>
            <div class="mt-8 pt-6 border-t">
                <h2 class="text-xl font-semibold mb-4">Edit Page</h2>
                <form action="/api/pages/update/<%= page.urlId %>" method="POST" class="space-y-4">
                    <div>
                        <label for="title" class="block text-sm font-medium text-gray-700">Title</label>
                        <input type="text" id="title" name="title" value="<%= page.title %>" required
                            class="mt-1 block w-full rounded-md border border-gray-300 p-2 focus:border-blue-500 focus:ring-blue-500">
                    </div>
                    <div>
                        <label for="content" class="block text-sm font-medium text-gray-700">Content</label>
                        <textarea id="content" name="content" rows="6" class="mt-1 block w-full rounded-md border border-gray-300 p-2 focus:border-blue-500 focus:ring-blue-500"><%= page.content %></textarea>
                    </div>
                    <button type="submit" class="bg-blue-500 hover:bg-blue-600 text-white px-4 py-2 rounded">
                        Update Page
                    </button>
                </form>
            </div>
        <% } %>
    </div>
</div>