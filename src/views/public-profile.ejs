<div class="max-w-4xl mx-auto">
    <!-- Profile Header -->
    <div class="bg-white shadow rounded-lg p-6 mb-6">
        <div class="flex items-center space-x-4">
            <div class="bg-blue-500 text-white rounded-full w-16 h-16 flex items-center justify-center text-2xl font-bold">
                <%= profileUser.username.charAt(0).toUpperCase() %>
            </div>
            <div>
                <h1 class="text-2xl font-bold text-gray-900"><%= profileUser.username %>'s Profile</h1>
                <p class="text-gray-500">Member since <%= new Date(profileUser.createdAt).toLocaleDateString() %></p>
            </div>
        </div>
    </div>

    <!-- User's Pages -->
    <div class="bg-white shadow rounded-lg p-6">
        <h2 class="text-xl font-semibold mb-6">Pages by <%= profileUser.username %></h2>
        
        <% if (pages && pages.length > 0) { %>
            <div class="space-y-4">
                <% pages.forEach(page => { %>
                    <div class="border rounded p-4 hover:bg-gray-50">
                        <a href="/<%= profileUser.username %>/<%= page.urlId %>" class="block">
                            <h3 class="font-medium text-lg text-blue-600 hover:text-blue-800"><%= page.title %></h3>
                            <div class="mt-1 text-sm text-gray-500">
                                <span>Created <%= new Date(page.createdAt).toLocaleDateString() %></span>
                                <span class="mx-2">â€¢</span>
                                <span>URL: /<%= profileUser.username %>/<%= page.urlId %></span>
                            </div>
                        </a>
                    </div>
                <% }) %>
            </div>
        <% } else { %>
            <p class="text-gray-500">No pages created yet.</p>
        <% } %>
    </div>
</div>